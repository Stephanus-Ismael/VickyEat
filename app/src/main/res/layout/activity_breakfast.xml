<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Breakfast">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Test">

        <LinearLayout
            android:layout_width="527dp"
            android:layout_height="422dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="288dp">\

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/test1"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingBottom="40dp"
                android:text="Bacon, Egg & Toast"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="-14dp"
                tools:layout_editor_absoluteY="196dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/lunch"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingBottom="40dp"
                android:text="Scrambled Egg & Toast"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="330dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/fast_food"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingBottom="40dp"
                android:text="Toast"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/drinks"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingBottom="40dp"
                android:text="Fat Cake"
                android:textSize="24sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="275dp"
            android:layout_height="148dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/logo2"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="192dp"
            android:layout_height="69dp"
            android:ems="5"
            android:inputType="textPersonName"
            android:text="Breakfast"
            android:textAlignment="center"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="188dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="189dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>